<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/PayText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="47dp"
        android:text="@string/payment"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/PayText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/PayText2"
        android:layout_width="94dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/cardName"
        app:layout_constraintBaseline_toBaselineOf="@+id/Payspinner2"
        app:layout_constraintEnd_toStartOf="@+id/Payspinner2"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/PayText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/cardNumber"
        app:layout_constraintBaseline_toBaselineOf="@+id/PayText7"
        app:layout_constraintEnd_toStartOf="@+id/PayText7"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/PayText4"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="16dp"
        android:text="@string/cvv"
        app:layout_constraintBaseline_toBaselineOf="@+id/PayText8"
        app:layout_constraintEnd_toStartOf="@+id/PayText8"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/PayText5"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="16dp"
        android:text="@string/expDate"
        app:layout_constraintBaseline_toBaselineOf="@+id/PayText6"
        app:layout_constraintEnd_toStartOf="@+id/PayText6"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/PayText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/Paybutton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PayText5" />

    <EditText
        android:id="@+id/PayText7"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/PayText8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PayText3" />

    <EditText
        android:id="@+id/PayText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/PayText6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PayText4" />

    <Spinner
        android:id="@+id/Payspinner2"
        android:layout_width="138dp"
        android:layout_height="40dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="96dp"
        android:layout_marginTop="8dp"
        android:entries="@array/cardtype"
        app:layout_constraintBottom_toTopOf="@+id/PayText7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/PayText1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Paybutton2"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/save"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>